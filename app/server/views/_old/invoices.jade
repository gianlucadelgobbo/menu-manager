
h1=__("Invoices")
div.well
	- if (typeof msg !== "undefined" && typeof msg.e !== "undefined" && msg.e.length)
		.alert.alert-error
			h4=__("There are some errors")
			ul
				- for(a=0;a<msg.e.length;a++)
					li=msg.e[a].m
	- if (typeof msg !== "undefined" && typeof msg.c !== "undefined" && msg.c.length)
		.alert.alert-success
			h4=__("There are some messages")
			ul
				- for(a=0;a<msg.c.length;a++)
					li=msg.c[a].m
	table.table
		thead
			tr
				th=__("Actions")
				th=__("Invoice number")
				th=__("Invoice date")
				th=__("Client")
				th=__("Payment")
				th=__("Shipped to")
				th=__("Offer")
				th=__("Delivery date")
				th=__("Subtotal")
				th=__("VAT")
				th=__("Shipping costs")
				th=__("TOTAL")
		tbody
			each x in result
				tr
					td
						div.btn-group
							a.btn.btn-info(href="/invoice/?id="+x._id)=__("Edit")
							button.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
								span.caret
							ul.dropdown-menu
								li
									a(href="/invoices/?id="+x._id+"&del="+1)=__("Delete")
									a(href="/print/invoice/?id="+x._id)=__("Print")
					td=x.invoice_number
					- dd = new Date(x.invoice_date)
					td=dd.getDate()+"/"+(dd.getMonth()+1)+"/"+dd.getFullYear()
					td
						a(href="/client/?id="+x.to_client._id)=x.to_client.name
					td=x.payment
					td=x.destination
					td=x.offer_number
					- var dd=""
					- if(x.delivery_date)
						dd = x.delivery_date.getDate()+"/"+(x.delivery_date.getMonth()+1)+"/"+x.delivery_date.getFullYear()
					td=dd
					td=x.subtotal
					td=x.vat_amount
					td=x.shipping_costs
					td=x.total
					
